<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet
        id="coyapp-security-coy_sec_group_role"
        author="cklein"
        context="deploy"
        runAlways="false">
        <preConditions>
            <changeSetExecuted
                id="coyapp-security-coy_sec_role"
                author="cklein"
                changeLogFile="eu/coldrye/app/backend/model/security/liquibase/schemas/coy_sec_role.xml"/>
        </preConditions>
        <createTable
            tableName="coy_sec_group_role">
            <column
                name="entity_state"
                type="${EntityStateType}"
                defaultValue="ACTIVE">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="owner_role"
                type="${OwnerRoleType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="realm_id"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="created_when"
                type="${TimestampType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="created_by"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="group_id"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="role_id"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_ROLE_REALM_ID"
            baseTableName="coy_sec_user_group"
            baseColumnNames="realm_id"
            referencedTableName="coy_realm"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_ROLE_CREATED_BY"
            baseTableName="coy_sec_group_role"
            baseColumnNames="created_by"
            referencedTableName="coy_user"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_ROLE_GROUP_ID"
            baseTableName="coy_sec_group_role"
            baseColumnNames="group_id"
            referencedTableName="coy_sec_group"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_ROLE_ROLE_ID"
            baseTableName="coy_sec_group_role"
            baseColumnNames="role_id"
            referencedTableName="coy_sec_role"
            referencedColumnNames="id"/>
        <addPrimaryKey
            constraintName="PK_COY_SEC_GROUP_ROLE"
            tableName="coy_sec_group_role"
            columnNames="group_id, role_id"/>
    </changeSet>
</databaseChangeLog>