<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet
        id="coyapp-security-coy_sec_group"
        author="cklein"
        context="deploy"
        runAlways="false">
        <preConditions>
            <and>
                <changeSetExecuted
                    id="coyapp-security-coy_sec_realm"
                    author="cklein"
                    changeLogFile="eu/coldrye/app/backend/model/security/liquibase/schemas/coy_sec_realm.xml"/>
                <changeSetExecuted
                    id="coyapp-security-coy_sec_user"
                    author="cklein"
                    changeLogFile="eu/coldrye/app/backend/model/security/liquibase/schemas/coy_sec_user.xml"/>
            </and>
        </preConditions>
        <createTable
            tableName="coy_sec_group">
            <column
                name="id"
                type="${UuidType}">
                <constraints
                    primaryKey="true"
                    nullable="false"/>
            </column>
            <column
                name="entity_state"
                type="${EntityStateType}"
                defaultValue="ACTIVE">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="owner_role"
                type="${OwnerRoleType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="realm_id"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="created_when"
                type="${TimestampType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="created_by"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="modified_when"
                type="${TimestampType}">
            </column>
            <column
                name="modified_by"
                type="${UuidType}"/>
            <column
                name="name"
                type="${NameType}">
                <constraints
                    nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_REALM_ID"
            baseTableName="coy_sec_group"
            baseColumnNames="realm_id"
            referencedTableName="coy_realm"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_CREATED_BY"
            baseTableName="coy_sec_group"
            baseColumnNames="created_by"
            referencedTableName="coy_user"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_GROUP_MODIFIED_BY"
            baseTableName="coy_sec_group"
            baseColumnNames="modified_by"
            referencedTableName="coy_user"
            referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>