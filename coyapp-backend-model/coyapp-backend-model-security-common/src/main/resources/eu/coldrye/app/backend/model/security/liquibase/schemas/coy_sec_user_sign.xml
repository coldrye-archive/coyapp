<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet
        id="coyapp-security-coy_sec_user_sign"
        author="cklein"
        context="deploy"
        runAlways="false">
        <preConditions>
            <changeSetExecuted
                id="coyapp-security-coy_sec_user_auth"
                author="cklein"
                changeLogFile="eu/coldrye/app/backend/model/security/liquibase/schemas/coy_sec_user_auth.xml"/>
        </preConditions>
        <createTable
            tableName="coy_sec_user_sign">
            <column
                name="id"
                type="${UuidType}">
                <constraints
                    primaryKey="true"
                    nullable="false"/>
            </column>
            <column
                name="entity_state"
                type="${EntityStateType}"
                defaultValue="ACTIVE">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="owner_role"
                type="${OwnerRoleType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="realm_id"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="created_when"
                type="${TimestampType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="created_by"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="modified_when"
                type="${TimestampType}">
            </column>
            <column
                name="modified_by"
                type="${UuidType}"/>
            <column
                name="sign_type"
                type="${SecUserSignType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="current_state"
                type="${SecUserSignStateType}">
                <constraints
                    nullable="false"/>
            </column>
            <column
                name="auth_id"
                type="${UuidType}"/>
            <column
                name="user_id"
                type="${UuidType}">
                <constraints
                    nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_USER_SIGN_REALM_ID"
            baseTableName="coy_sec_user_sign"
            baseColumnNames="realm_id"
            referencedTableName="coy_realm"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_USER_SIGN_CREATED_BY"
            baseTableName="coy_sec_user_sign"
            baseColumnNames="created_by"
            referencedTableName="coy_user"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_USER_SIGN_MODIFIED_BY"
            baseTableName="coy_sec_user_sign"
            baseColumnNames="modified_by"
            referencedTableName="coy_user"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_USER_SIGN_AUTH_ID"
            baseTableName="coy_sec_user_sign"
            baseColumnNames="auth_id"
            referencedTableName="coy_sec_user_auth"
            referencedColumnNames="id"/>
        <addForeignKeyConstraint
            constraintName="FK_COY_SEC_USER_SIGN_USER_ID"
            baseTableName="coy_sec_user_sign"
            baseColumnNames="user_id"
            referencedTableName="coy_sec_user"
            referencedColumnNames="id"/>
        <addUniqueConstraint
            constraintName="UK_COY_SEC_USER_SIGN_REALM_TYPE_USER"
            tableName="coy_sec_user_sign"
            columnNames="realm_id, sign_type, user_id"/>
        <addUniqueConstraint
            constraintName="UK_COY_SEC_USER_SIGN_REALM_SIGN_TYPE"
            tableName="coy_sec_user_sign"
            columnNames="realm_id, sign, sign_type"/>
    </changeSet>
</databaseChangeLog>